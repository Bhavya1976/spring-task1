<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--property based injection-->
    <bean id="actor" class="com.stackroute.domain.Actor">
        <constructor-arg  index="0" type="java.lang.String" name="name" value="Bhavya"></constructor-arg>
        <constructor-arg index="1" type="java.lang.String" name="gender" value="Female"></constructor-arg>
        <constructor-arg index="2" type="int" name="age" value="22"></constructor-arg>
    </bean>
    <!--autowire byName-->
    <bean id="movie1" class="com.stackroute.domain.Movie" autowire="byName"></bean>
    <!--autowire bytype-->
    <bean id="movie2" class="com.stackroute.domain.Movie" autowire="byType"></bean>


</beans>